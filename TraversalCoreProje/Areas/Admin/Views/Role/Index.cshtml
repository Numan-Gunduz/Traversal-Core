@model List<AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<h1>Rol Listesi</h1>
@if (Model.Count > 0)
{
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Rol Adı</th>
			<th>Rol Sil</th>
			<th>Rol Güncelle</th>
		</tr>

		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td>@item.Name</td>
				<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Rolü Sil</a></td>
				<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-success">Rolü Güncelle</a></td>
			</tr>
		}
	</table>
	
}

else
{
	<div class="alert alert-success">
		<spam>Herhangi Bir Rol Bulunamadı!</spam>
	</div>
}
	


	<a href="/Admin/Role/CreateRole" class="btn btn-outline-primary">Yeni Rol Girişi</a>


