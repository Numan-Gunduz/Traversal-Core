@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile Ziyaretçi Ekleme Sayfası</h1>
<br />
<form method="post">
	<label>Ziyaretçinin adı</label>
	<input type="text" class="form-control" asp-for ="Name" />
	<br />

	<label>Ziyaretçinin Soyadı</label>
	<input type="text" class="form-control" asp-for="Surname" />
	<br />

	<label>Ziyaretçinin Mail Adresi</label>
	<input type="text" class="form-control" asp-for="Mail" />
	<br />

	<label>Ziyaretçinin Şehri</label>
	<input type="text" class="form-control" asp-for="City" />
	<br />
	<label>Ziyaretçinin Ülkesi</label>
	<input type="text" class="form-control" asp-for="Country" />
	<br />
	<button class="btn btn-outline-primary">Ziyaretçi Kaydet</button>
</form>
