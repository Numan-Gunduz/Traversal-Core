@using EntityLayer.Concrete
@model List<Reservation>
@{
	ViewData["Title"] = "ReservationUser";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}	

<h1>Kullanıcının Geçmiş Rezervasyonları</h1>
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Misafit Ad Soyad</th>
		<th>Rota</th>
		<th>Kişi Sayısı</th>
		<th>Tarih</th>
		<th>Detaylar</th>
    </tr>
	@foreach (var item in Model)
	{

		{ count = count + 1; }

	
		<tr>
			<td>@count</td>
			<td>
				@if (item.AppUser != null)
				{
				<td>@item.AppUser.Name @item.AppUser.Surname</td>
				}
				else
				{
					
				}
					</td>
			<td>@item.Destination.City</td>
			<td>@item.PersonCount</td>
			<td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
			<td>@item.Destination.Details1</td>
			<td><a href="#" class="btn btn-outline-primary">Detaylar</a></td>
		</tr>
		
	}
</table>

