@if (User.Identity.IsAuthenticated)
{

	<div class="leave-comment-form mt-5" id="reply">
		<h4 class="side-title mb-2">Bir Yorum Bırakın</h4>
		<p class="mb-4">
			İşaretli Alanları doldurmanız gerekmektedir...
		</p>

		<form method="post" asp-action="AddComment" asp-controller="Comment">

			<div class="form-group">
				<textarea name="CommentContent" class="form-control" placeholder="Yorumununz" required=""
						  spellcheck="false"></textarea>
			</div>
			<div class="form-group col-lg-6">
				<input type="text" name="DestinationID" hidden class="form-control" placeholder="Destinasyon ID" required=""
					   value="@ViewBag.i">
			</div>
			<div class="form-group col-lg-6">
				<input type="text" name="AppUserID" hidden class="form-control" placeholder="Destinasyon ID" required=""
					   value="@ViewBag.UserID">
			</div>

			<div class="submit text-right">
				<button class="btn btn-style btn-primary">Yorum Yap </button>
			</div>
		</form>
	</div>
}
else
{
	<h2>Yorum Yapabilmek İçin Üye olmanız gerekmektedir...
	</h2>
}